{
  "compilerOptions": {
    "target": "es2020",
    "module": "es6",
    "baseUrl": ".",
    "paths": {
      "#server": ["./src/server.js"],
      "#config/*": ["./src/config/*"],
      "#routes/*": ["./src/routes/*"],
      "#middleware/*": ["./src/middleware/*"],
      "#models/*": ["src/db/models/*"],
      "#services/*": ["./src/services/*"],
      "#dataaccess/*": ["./src/dataaccess/*"],
      "#business/*": ["./src/business/*"],
      "#helpers/*": ["./src/helpers/*"]
    }
  },
  "exclude": ["node-modules"]
}
