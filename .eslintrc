{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "import/no-extraneous-dependencies": [
            "error", {
               "devDependencies": true
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "no-return-await": 0,
        "no-console": [
            "error"
        ]
    }
}
